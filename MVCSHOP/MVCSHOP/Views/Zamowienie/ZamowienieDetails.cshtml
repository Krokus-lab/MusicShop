@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Pozycje Twojego zamówienia</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Płyta</th>
        <th></th>
        <th>Ilość*Cena</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
<tr>
    <td>@Model.Rows[i][6] - @Model.Rows[i][5]</td>
    <td><img src="@Model.Rows[i][8]" height="200" width="250" asp-append-version="true" /></td>
    <td>@Model.Rows[i][3] * @Model.Rows[i][10]</td>


</tr>
    }
</table>
<a href="@Url.Action("ZamowieniaKlient", "Zamowienie")">Powrót do listy zamówień</a>