@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Klienci</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>email</th>
        <th>telefon</th>
        <th>Data zostania klientem</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>
            <td>
                <a href="@Url.Action("Details", "Klient", new { @id=Model.Rows[i][0] })">Detale</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Klient")">Dodaj nowego klienta</a>