@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Płyty</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Tytul</th>
        <th>Autor</th>
        <th>Gatunek</th>
        <th>Zdjecie1</th>
        <th>Zdjecie2</th>
        <th>Cena</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td><img src="@Model.Rows[i][4]" height="200" width="250" asp-append-version="true" /></td>
            <td><img src="@Model.Rows[i][5]" height="200" width="250" asp-append-version="true" /></td>
            <td>@Model.Rows[i][6]</td>

            <td>
                <a href="@Url.Action("Details", "Produkt", new { @id=Model.Rows[i][0] })">Detale</a>
                <a href="@Url.Action("Opinia", "Produkt", new { @id=Model.Rows[i][0] })">Opinie</a>
            </td>
        </tr>
    }
</table>


<a href="@Url.Action("Create", "Produkt")">Dodaj nową płytę</a>
