@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Opinie o płycie: @Model.Rows[0][4] "@Model.Rows[0][5]"</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Autor opinii:</th>
        <th>Treść:</th>

        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][1]</td>
            <td>
                @if (Convert.ToInt32(@User.FindFirst("id").Value) == Convert.ToInt32(@Model.Rows[i][6]))
                {
                    <a href="@Url.Action("ClientEditOpinia", "Produkt", new { @id=Model.Rows[i][0] })">Edycja</a>
                    <a href="@Url.Action("ClientDeleteOpinia", "Produkt", new { @id=Model.Rows[i][0] })">Usuń</a>
                }

            </td>
        </tr>
    }
</table>
<a href="@Url.Action("OpinionAddClient", "Produkt", new { @id=Model.Rows[0][3] })">Dodaj swoją opinię</a>

