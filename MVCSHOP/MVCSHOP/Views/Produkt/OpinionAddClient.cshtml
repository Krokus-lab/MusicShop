@model MVCSHOP.Models.Opinia

@{
    ViewData["Title"] = "Opinia_edit";
}

<h1>Dodaj opinię:</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OpinionAddClient">    
            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <input  asp-for="Tresc"class="form-control" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


